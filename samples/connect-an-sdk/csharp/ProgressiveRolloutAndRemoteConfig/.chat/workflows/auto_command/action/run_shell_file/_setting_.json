{
	"name": "run_shell_file",
	"description": "run shell script file",
	"type": [
		"shell"
	],
	"args": [
		{
			"name": "script_file",
			"description": "shell script file to run",
			"type": "string",
			"as": "file",
			"from": "content.content"
		}
	],
	"action": "run_shell",
	"handler": [
		"bash",
		"${script_file}"
	]
}