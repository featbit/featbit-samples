{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "lib": ["es2017"],
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "declarationMap": true, // enables importers to jump to source
    "strict": true,
    "outDir": "./dist/esm",
    "skipLibCheck": true
  }
}